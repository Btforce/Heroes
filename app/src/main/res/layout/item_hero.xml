<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_heroitem_rank"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123" />

    <TextView
        android:id="@+id/textView_heroitem_name"
        android:layout_width="225dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView_heroitem_rank"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="an epic name" />

    <TextView
        android:id="@+id/textView_heroitem_description"
        android:layout_width="214dp"
        android:layout_height="47dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textView_heroitem_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_heroitem_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroitem_name"
        tools:text="The hero that does stuff" />
</androidx.constraintlayout.widget.ConstraintLayout>